# ðŸ”§ Environment Variables - Tibia Guild Manager
# Copy this file to .env and configure your values

# Database Configuration
DATABASE_URL="postgresql://guilduser:your_secure_password@localhost:5432/guildmanager"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secure-secret-here-minimum-32-characters-long"

# Application Environment
NODE_ENV="development"

# Production Server Configuration (for deployment)
# DATABASE_URL="postgresql://guilduser:production_password@localhost:5432/guildmanager"
# NEXTAUTH_URL="http://74.208.149.168:3000"
# NODE_ENV="production"

# Optional: TibiaData API Configuration
TIBIADATA_BASE_URL="https://api.tibiadata.com/v4"

# Optional: Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Optional: Logging
LOG_LEVEL="info"

# Optional: Session Configuration
SESSION_MAX_AGE="2592000"  # 30 days in seconds
