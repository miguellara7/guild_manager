{
  "expo": {
    "name": "Tibia Guild Manager",
    "slug": "tibia-guild-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0066cc"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tibiaguildmanager.mobile",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0066cc"
      },
      "package": "com.tibiaguildmanager.mobile",
      "versionCode": 1,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "tibia-guild-manager-mobile"
      }
    },
    "scheme": "tibiaguildmanager",
    "privacy": "public",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "description": "Monitor your Tibia guild in real-time with death tracking, enemy alerts, and comprehensive analytics. Perfect for guild masters and members who want to stay connected to their guild activities.",
    "githubUrl": "https://github.com/yourusername/tibia-guild-manager"
  }
}
